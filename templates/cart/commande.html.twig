{% extends 'base.html.twig' %}

{% block title %}Commande{% endblock %}

{% block body %}
    <div class="col-12">
        <form action="{{ path("traitementCommande") }}" method="post">
            <div class="form-group row">
                <div class="col-6">
                    <h2>Adresse de facturation</h2>
                </div>
                <div class="col-6">
                    <h2>Adresse de livraison</h2>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-2" for="adresse_facturation">Adresse : </label>
                <div class="col-4">
                    <input type="text" name="adresse_facturation" id="adresse_facturation" class="form-control" required>
                </div>
                <label class="col-form-label col-2" for="adresse_livraison">Adresse : </label>
                <div class="col-4">
                    <input type="text" name="adresse_livraison" id="adresse_livraison" class="form-control" required>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-2" for="codePostal_facturation">Code postal : </label>
                <div class="col-2">
                    <input type="text" name="codePostal_facturation" id="codePostal_facturation" class="form-control" maxlength="5" required>
                </div>
                <div class="col-2"></div>
                <label class="col-form-label col-2" for="adresse_livraison">Code postal : </label>
                <div class="col-2">
                    <input type="text" name="codePostal_livraison" id="codePostal_livraison" class="form-control" maxlength="5" required>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-2" for="ville_facturation">Ville : </label>
                <div class="col-4">
                    <input type="text" name="ville_facturation" id="ville_facturation" class="form-control" required>
                </div>
                <label class="col-form-label col-2" for="ville_livraison">Ville : </label>
                <div class="col-4">
                    <input type="text" name="ville_livraison" id="ville_livraison" class="form-control" required>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-2" for="pays_facturation">Pays : </label>
                <div class="col-2">
                    <input type="text" name="pays_facturation" id="pays_facturation" class="form-control" required>
                </div>
                <div class="col-2"></div>
                <label class="col-form-label col-2" for="pays_livraison">Pays : </label>
                <div class="col-2">
                    <input type="text" name="pays_livraison" id="pays_livraison" class="form-control" required>
                </div>
            </div>
            <div class="form-group row">
                <div class="col">
                    <button type="submit" class="btn btn-primary">Valider la commande</button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}