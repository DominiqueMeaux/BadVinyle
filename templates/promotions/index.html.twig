{% extends 'base.html.twig' %}

{% block title %}Promotions index{% endblock %}

{% block body %}
    <h1>Liste des promotions</h1>

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Pourcentage</th>
                <th>Libell√©</th>
                <th>Actif ?</th>
                <th>Date de fin</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for promotion in promotions %}
            <tr>
                <td>{{ promotion.promoId }}</td>
                <td>{{ promotion.promoPercent }}</td>
                <td>{{ promotion.promoLibelle }}</td>
                <td>{{ promotion.promoActive ? 'Oui' : 'Non' }}</td>
                <td>{{ promotion.promoDateFin ? promotion.promoDateFin|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('promotions_show', {'promo_id': promotion.promo_id}) }}"><i class="fas fa-eye"></i></a>&nbsp;&nbsp;
                    <a href="{{ path('promotions_edit', {'promo_id': promotion.promo_id}) }}"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('promotions_new') }}">Create new</a>
{% endblock %}
