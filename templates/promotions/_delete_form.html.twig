<form method="post" action="{{ path('promotions_delete', {'promo_id': promotion.promo_id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ promotion.promo_id) }}">
    <button class="btn">Delete</button>
</form>
