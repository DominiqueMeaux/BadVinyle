{% extends 'base.html.twig' %}

{% block title %}Promotions{% endblock %}

{% block body %}
    <h1>Promotions</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Promo_id</th>
                <td>{{ promotion.promoId }}</td>
            </tr>
            <tr>
                <th>Promo_percent</th>
                <td>{{ promotion.promoPercent }}</td>
            </tr>
            <tr>
                <th>Promo_libelle</th>
                <td>{{ promotion.promoLibelle }}</td>
            </tr>
            <tr>
                <th>Promo_active</th>
                <td>{{ promotion.promoActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Promo_date_fin</th>
                <td>{{ promotion.promoDateFin ? promotion.promoDateFin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('promotions_index') }}">back to list</a>

    <a href="{{ path('promotions_edit', {'promo_id': promotion.promo_id}) }}">edit</a>

    {{ include('promotions/_delete_form.html.twig') }}
{% endblock %}
