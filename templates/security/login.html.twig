{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
  

<div class="container d-flex justify-content-center mt-5">
    <div class="d-flex flex-column justify-content-between w-75">
        <div class="card one bg-white px-5 py-4 mb-3">
            <p class="text-uppercase display 4">Login</p>
            <hr>
            <form method="post">
                {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
                {% endif %}
                <div class="form-group">
                    <input type="email" value="{{ last_username }}" name="email"  class="form-control" id="inputEmail" required>
                    <label class="form-control-placeholder" for="inputEmail">Email</label>
                </div>
                <div class="form-group">
                    <input type="password" name="password" class="form-control" id="inputPassword" required>
                    <label class="form-control-placeholder" for="inputPassword">Password</label>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                {# <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div> #}
                <button type="submit" class="btn btn-primary btn-block btn-lg mt-1 mb-2"><span>Connexion<i
                            class="fas fa-long-arrow-alt-right ml-2"></i></span></button>
            </form>
        </div>
    </div>
</div>

{# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
See https://symfony.com/doc/current/security/remember_me.html #}


{% endblock %}