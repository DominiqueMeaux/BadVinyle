{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
    <h1>Products</h1>

    {% include 'products/_cardDetail.html.twig' with {product : product } only %}
<hr>
    <table class="table">
        <legend>Avis des clients</legend>
        <thead>
                <tr>
                    <th>Note</th>
                    <th>Commentaire</th>
                </tr>
        </thead>
        <tbody>
        {% for commentary in product.getCommentaries() %}
        <tr>
            <td> {{ commentary.commNote }}</td>
            <td>{{ commentary.commComment }}</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('products') }}">back to list</a>



{% endblock %}
