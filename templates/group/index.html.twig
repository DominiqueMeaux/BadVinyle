{% extends 'base.html.twig' %}

{% block title %}Group index{% endblock %}

{% block body %}
    <h1>Liste des groupes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for group in groups %}
            <tr>
                <td>{{ group.groupId }}</td>
                <td>{{ group.groupName }}</td>
                <td>{{ group.groupDescr }}</td>
                <td>
                    <a href="{{ path('group_show', {'group_id': group.group_id}) }}"><i class="fas fa-eye"></i></a>&nbsp;&nbsp;
                    <a href="{{ path('group_edit', {'group_id': group.group_id}) }}"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('group_new') }}">Create new</a>
{% endblock %}
